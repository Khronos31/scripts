#!/bin/bash --
# Khronos | funnychar

# 2020.02.17 funnychar ver 1.0.2
# Original is written by kanata (@kanata2003)

usage(){
  echo "ex) echo abcABC|$0 -u 1D468"
  echo "ex) echo abcABC|$0 -uA FF21 -ua 249C"
  echo "ex) $0 -p [pattern_number] abcABC"
  echo "    pattern_number is .."
  sed -e '1,/^#LIST1_B$/d
          /^#LIST1_E$/,$d' \
      -e 's/A=/A=U+/
          s/;; #//
          s/"//g' \
      -- "$0"
}

changecode(){
  funny=""
  A="$1"
  a="$2"

  funny="$(printf "$(printf '\\U%X' $[{A,a}+{0..25}])")"

  blank="$(printf "\U1D455\U1D49D\U1D4A0\U1D4A1\U1D4A3\U1D4A4\U1D4A7\U1D4A8\U1D4AD\U1D4BA\U1D4BC\U1D4C4\U1D506\U1D50B\U1D50C\U1D515\U1D51D\U1D53A\U1D53F\U1D545\U1D547\U1D548\U1D549\U1D551")"
  fixed="$(printf "\U210E\U212C\U2130\U2131\U210B\U2110\U2112\U2133\U211B\U212F\U210A\U2134\U212D\U210C\U2111\U211C\U2128\U2102\U210D\U2115\U2119\U211A\U211D\U2124")"
  funny="$(sed "y/${blank}/${fixed}/" <<<"$funny")"

  sed "y/ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz/${funny}/"
}

detect_a(){
  case "${1^^}" in
    41|24B6|1F130|1F150|1F170|1F1E6) echo "61";;
    FF21) echo "FF41";;
    1F110) echo "249C";;
    *) printf %X "$((0x$1+26))";;
  esac
}

A="41"
a="61"

while [ $# -ge 1 ]; do
  case "$1" in
    -h|--help)
      usage
      exit 0
    ;;
    -p)
      case "$2" in
#LIST1_B
         1) A="FF21" ;; # a=U+FF41  #ï¼¡ï¼¢ï¼£ï½ï½‚ï½ƒ (FULLWIDTH)
         2) A="1D400";; # a=U+1D41A #ð€ðð‚ðšð›ðœ
         3) A="1D434";; # a=U+1D44E #ð´ðµð¶ð‘Žð‘ð‘
         4) A="1D468";; # a=U+1D482 #ð‘¨ð‘©ð‘ªð’‚ð’ƒð’„
         5) A="1D49C";; # a=U+1D4B6 #ð’œð’ð’žð’¶ð’·ð’¸
         6) A="1D4D0";; # a=U+1D4EA #ð“ð“‘ð“’ð“ªð“«ð“¬
         7) A="1D504";; # a=U+1D51E #ð”„ð”…ð”†ð”žð”Ÿð” 
         8) A="1D538";; # a=U+1D552 #ð”¸ð”¹ð”ºð•’ð•“ð•”
         9) A="1D56C";; # a=U+1D586 #ð•¬ð•­ð•®ð–†ð–‡ð–ˆ
        10) A="1D5A0";; # a=U+1D5BA #ð– ð–¡ð–¢ð–ºð–»ð–¼
        11) A="1D5D4";; # a=U+1D5EE #ð—”ð—•ð—–ð—®ð—¯ð—°
        12) A="1D608";; # a=U+1D622 #ð˜ˆð˜‰ð˜Šð˜¢ð˜£ð˜¤
        13) A="1D63C";; # a=U+1D656 #ð˜¼ð˜½ð˜¾ð™–ð™—ð™˜
        14) A="1D670";; # a=U+1D68A #ð™°ð™±ð™²ðšŠðš‹ðšŒ
        15) A="1F110";; # a=U+249C  #ðŸ„ðŸ„‘ðŸ„’â’œâ’â’ž (PARENTHESIZED)
        16) A="24B6" ;; # a=U+24D0  #â’¶â’·â’¸â“â“‘â“’ (CIRCLED)
        17) A="1F130";; # a=(None)  #ðŸ„°ðŸ„±ðŸ„² (SQUARED)
        18) A="1F150";; # a=(None)  #ðŸ…ðŸ…‘ðŸ…’ (NEGATIVE CIRCLED)
        19) A="1F170";; # a=(None)  #ðŸ…°ðŸ…±ðŸ…² (NEGATIVE SQUARED)
        20) A="1F1E6";; # a=(None)  #ðŸ‡¦ðŸ‡§ðŸ‡¨
#LIST1_E
        *)
          echo "Invalid pattern" 1>&2
          usage 1>&2
          exit 1
        ;;
      esac
      a="$(detect_a "$A")"
      shift 2
    ;;
    -u)
      A="${2//[!0-9a-fA-F]}"
      a="$(detect_a "$(sed 's/^0*//' <<<"$A")")"
      shift 2
    ;;
    -uA)
      A="${2//[!0-9a-fA-F]}"
      shift 2
    ;;
    -ua)
      a="${2//[!0-9a-fA-F]}"
      shift 2
    ;;
    --)
      shift
      break
    ;;
    *)
      break
    ;;
  esac
done

if [ -n "$*" ]; then
  changecode "0x$A" "0x$a" <<<"$*"
else
  changecode "0x$A" "0x$a"
fi

exit 0
